version: '3.8'

services:
  # .NET API Backend
  api:
    build:
      context: ./Backend
      dockerfile: Dockerfile
    ports:
      - "5000:80"
    environment:
      - ASPNETCORE_ENVIRONMENT=Production
      - ASPNETCORE_URLS=http://+:8080
      # Add your connection strings, API keys, etc.
    networks:
      - seedmapper-network

  # Angular Frontend
  web:
    build:
      context: ./FrontEnd
      dockerfile: Dockerfile
    ports:
      - "80:80"
    depends_on:
      - api
    environment:
      - API_URL=http://localhost:5000
    networks:
      - seedmapper-network

networks:
  seedmapper-network:
    driver: bridge